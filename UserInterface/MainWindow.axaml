<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="500"
        x:Class="WeddingTableOrganizer.MainWindow"
        Title="UserInterface">
    <Grid ColumnDefinitions="10, Auto, Auto, Auto, Auto, *, 10"
          RowDefinitions="20, Auto, *, Auto, Auto, Auto, Auto, Auto, Auto, 30">
        
        <TextBlock Grid.Row="1"
                   Grid.Column="1"
                   Grid.ColumnSpan="2"
                   Text="Guests / Families"
                   FontWeight="Bold"
                   Margin="0, 0, 0, 10"/>
        
        <ScrollViewer Grid.Row="2"
                      Grid.Column="1"
                      Grid.ColumnSpan="3">
            <ListBox x:Name="GuestsListBox"/>
        </ScrollViewer>
        
        <TextBlock Grid.Row="3"
                   Grid.Column="1"
                   Text="Add New Family"
                   Margin="0, 10, 0, 0"/>
        
        <TextBox Grid.Row="4"
                 Grid.Column="1"
                 x:Name="FamilyNameTextBox"
                 Width="220"
                 Margin="0, 0, 5, 0"/>
        
        <Button Grid.Row="4"
                Grid.Column="2"
                Content="Add Family"
                Click="AddFamily_Click"/>
        
        <TextBlock Grid.Row="5"
                   Grid.Column="1"
                   Grid.ColumnSpan="2"
                   Text="Add Person To Family"
                   Margin="0, 10, 0, 0"/>
        
        <TextBox Grid.Row="6"
                 Grid.Column="1"
                 x:Name="PersonNameTextBox"
                 Width="220"
                 Margin="0, 0, 5, 0"/>
        
        <ComboBox Grid.Row="6"
                  Grid.Column="2"
                  x:Name="FamilyComboBox"
                  Width="120"
                  Margin="0, 0, 5, 0"/>
        
        <Button Grid.Row="6"
                Grid.Column="3"
                Content="Add Person"
                Click="AddPerson_Click"/>
        
        
        <Button Grid.Row="7"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Content="Assign Seating (Families First)"
                Click="AssignFamiliesFirst_Click"
                Margin="0, 10, 0, 0"/>
        
        <Button Grid.Row="8"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Content="Assign Seating (People First)"
                Click="AssignPeopleFirst_Click"
                Margin="0, 5, 0, 0"/>
        
        <TextBlock Grid.Row="1"
                   Grid.Column="4"
                   Text="Tables"
                   FontWeight="Bold"
                   Margin="10,0,0,10"/>
        
        <ScrollViewer Grid.Row="2"
                      Grid.Column="4"
                      Grid.RowSpan="5"
                      Grid.ColumnSpan="2"
                      Margin="10, 0, 0, 0">
            <ListBox x:Name="TablesListBox"/>
        </ScrollViewer>
        
        <TextBlock Grid.Row="7"
                   Grid.Column="4"
                   Text="Add New Table"
                   Margin="10, 10, 0, 0"
                   VerticalAlignment="Bottom"/>
        
        <NumericUpDown Grid.Row="8"
                 Grid.Column="4"
                 x:Name="TablesUpDown"
                 Width="130"
                 Margin="10, 0, 5, 0"/>
        
        <Button Grid.Row="8"
                Grid.Column="5"
                Content="Add Table"
                Click="AddTable_Click"/>
    </Grid>
</Window>
